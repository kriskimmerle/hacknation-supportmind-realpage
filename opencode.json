{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "shadcn": {
      "type": "local",
      "command": [
        "npx",
        "shadcn@latest",
        "mcp"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "@playwright/mcp",
        "--headless",
        "--browser",
        "chromium",
        "--output-mode",
        "file",
        "--output-dir",
        ".mcp/playwright"
      ],
      "enabled": true
    }
  }
}
